def find_peak_binary_search(arr):
    n=len(arr)
    low=0
    high=len(arr)-1

    while low<= high:
        mid=low+(high-low)//2#her we are using mid formula as
                              #low+(high-low)//2 because to manage
                              #   efficient space
        if((mid==0 ) or arr[mid-1]<arr[mid])and (mid==n-1) or arr[mid+1]<arr[mid]:
            return mid
        elif mid>0 and arr[mid-1]> arr[mid]:
            high=mid-1
        else:
            low=mid+1