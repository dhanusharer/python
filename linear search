def first_last(arr, x):
    first = -1
    last = -1

    for i in range(len(arr)):  # Iterate through the array
        if arr[i] == x:
            if first == -1:  # Set first occurrence
                first = i
            last = i  # Keep updating last occurrence

    return (first, last)  # Return a tuple of first and last positions

# Example usage
arr = [1, 4, 4, 4, 44, 55]
x = 4
result = first_last(arr, x)
print(result)  # Output: (1, 3) â†’ 
               #First occurrence at index 1, last at index 3